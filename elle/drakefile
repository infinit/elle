    'src/elle/io/Directory.cc',
    'src/elle/io/Directory.hh',
    'src/elle/io/Dumpable.cc',
    'src/elle/io/Dumpable.hh',
    'src/elle/io/File.cc',
    'src/elle/io/File.hh',
    'src/elle/io/Link.cc',
    'src/elle/io/Link.hh',
    'src/elle/io/Path.cc',
    'src/elle/io/Path.hh',
    'src/elle/io/Path.hxx',
    'src/elle/io/Pattern.cc',
    'src/elle/io/Pattern.hh',
    'src/elle/io/Piece.cc',
